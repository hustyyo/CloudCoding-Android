<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="false"
    android:id="@+id/themed_dialog_graph_item_list_item_RL"
    android:background="?android:selectableItemBackground"
    android:paddingLeft="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:clickable="false"
        android:paddingRight="20dp"
        android:id="@+id/themed_dialog_graph_item_list_item_textLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:background="#fff09043"
            android:id="@+id/themed_dialog_graph_item_list_item_levelLinearLayout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="18sp"
            android:id="@+id/themed_dialog_graph_item_list_item_textView"
            android:clickable="false"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/themed_dialog_graph_item_list_item_imageView"
        android:src="@drawable/ic_action_accept_dark"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:visibility="visible"
        android:layout_marginRight="20dp" />

</RelativeLayout>
