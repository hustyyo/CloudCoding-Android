<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_list_height"
    android:clickable="true"
    android:id="@+id/themed_dialog_multi_list_item_RL"
    android:background="?android:selectableItemBackground"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:id="@+id/themed_dialog_multi_list_item_textLayout"
        android:gravity="center_vertical"
        android:clickable="false"
        android:layout_toLeftOf="@+id/themed_dialog_list_item_subtextView"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/themed_dialog_multi_list_item_textView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:clickable="false" />
    </LinearLayout>

    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:layout_marginRight="15dp"
        android:id="@+id/themed_dialog_list_item_subtextView"
        android:clickable="false"
        android:gravity="center_vertical|right"
        android:textColor="@color/text_color_light_white"
        android:layout_toLeftOf="@+id/themed_multi_list_dialog_checkBox"
        android:visibility="gone"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/themed_multi_list_dialog_checkBox"
        android:layout_alignParentRight="true"
        android:src="@drawable/orange_tick_button"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>

