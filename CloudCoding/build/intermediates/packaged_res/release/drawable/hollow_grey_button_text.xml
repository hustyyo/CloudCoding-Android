<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Selected but not pressed-->
    <item android:state_selected="true"
        android:state_pressed="false"
        android:color="#FF4444" />

    <!--Selected and pressed-->
    <item android:state_selected="true"
        android:state_pressed="true"
        android:color="#FFFFFF" />

    <!--Not Selected but pressed-->
    <item android:state_selected="false"
        android:state_pressed="true"
        android:color="#FFFFFF" />

    <!--Not Selected and not pressed-->
    <item android:state_selected="false"
        android:state_pressed="false"
        android:color="@color/com_cloudcoding_colorPrimary" />

    <item android:color="@color/com_cloudcoding_colorPrimary" />

</selector>