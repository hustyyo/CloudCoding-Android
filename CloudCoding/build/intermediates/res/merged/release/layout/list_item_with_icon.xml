<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_list_height"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/select_account_fragment_listItem_backgroundLayout"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_list_item_padding"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp"
            >
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/text"
                android:textSize="@dimen/base_list_item_title_text"
                android:focusable="false"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/sub"
                android:textSize="@dimen/base_list_item_sub_text"
                android:focusable="false"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="@dimen/base_list_height"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/button_top_bar_gray"
            android:src="@drawable/icon_go"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0"
        android:paddingLeft="2dp"
        />

</LinearLayout>
