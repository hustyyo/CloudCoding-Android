<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar_head"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/top_bar_button"
        android:layout_width="@dimen/top_bar_button_width"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:src="@drawable/back"
        android:layout_gravity="left|center_vertical"
        android:scaleType="fitCenter"
        android:background="@drawable/button_top_bar"
        />

    <TextView
        android:id="@+id/top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Diary"
        android:textColor="@color/com_cloudcoding_white"
        android:textSize="@dimen/top_bar_title_text_size"
        />
</LinearLayout>

