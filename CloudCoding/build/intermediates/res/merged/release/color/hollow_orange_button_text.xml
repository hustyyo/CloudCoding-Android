<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Disabled and pressed-->
    <item android:state_selected="false"
        android:state_pressed="false"
        android:state_enabled="false"
        android:color="#ffb4b4b4" />

    <!--Disabled and not pressed-->
    <item android:state_selected="false"
        android:state_pressed="true"
        android:state_enabled="false"
        android:color="#ffb4b4b4" />

    <!--Selected but not pressed-->
    <item android:state_selected="true"
        android:state_pressed="false"
        android:color="#FFFFFF" />

    <!--Selected and pressed-->
    <item android:state_selected="true"
        android:state_pressed="true"
        android:color="#FFFFFF" />

    <!--Not Selected but pressed-->
    <item android:state_selected="false"
        android:state_pressed="true"
        android:color="#FFFFFF" />

    <!--Not Selected and not pressed-->
    <item android:state_selected="false"
        android:state_pressed="false"
        android:color="@color/com_cloudcoding_orange_lighter_1" />

    <item android:color="@color/com_cloudcoding_orange_lighter_1" />

</selector>