<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/base_themed_dialog_baseLinearLayout">

    <LinearLayout
        android:id="@+id/base_themed_dialog_titleView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/dialog_title_background"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/base_themed_dialog_left_text_view"
                android:textSize="21sp"
                android:textStyle="normal"
                android:textColor="@color/text_button_white"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:ellipsize="end"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/base_themed_dialog_left_image_view"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="fitStart"
                android:src="@drawable/ic_action_left_dark"
                android:tint="@color/white"
                android:paddingLeft="5dp"
                android:visibility="gone"
                />
        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="New Text"
            android:maxLines="2"
            android:id="@+id/base_themed_dialog_titleTextView"
            android:textSize="@dimen/base_dialog_title_text_size"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />


        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/base_themed_dialog_right_text_view"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/text_button_white"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:paddingRight="15dp"
            android:visibility="gone"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/base_themed_dialog_mainRelativeLayout">

    </RelativeLayout>

</LinearLayout>