<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/search_view"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_vertical|right"
android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_gravity="bottom"
            android:background="@color/com_cloudcoding_white"
            />

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_line_white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <com.cloudcoding.ViewLib.TextViewFontAwesome
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_search"
                android:textColor="@color/com_cloudcoding_white"
                android:textSize="23sp"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:id="@+id/search_edit"
                android:textColor="@color/com_cloudcoding_white"
                android:textColorHint="@color/com_cloudcoding_edit_hint"
                android:background="@color/com_cloudcoding_clear"
                android:gravity="center_vertical"
                android:imeOptions="actionSearch"
                android:textSize="17sp"
                android:text=""
                android:singleLine="true"
                android:focusable="false"
                android:hint="@string/com_cloudcoding_search"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_gravity="bottom"
            android:background="@color/com_cloudcoding_white"
            />

    </LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:text="Cancel"
    android:id="@+id/clear_search"
    style="@style/orange_hollow_button"
    android:textStyle="bold"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="3dp"
    android:layout_gravity="center_vertical"
    android:visibility="gone"
    />
</LinearLayout>
